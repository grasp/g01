<table class="table table-striped">
  <tr>
    <th>关注用户</th>

  <th>邮件订阅</th>

    <th>删除</th>
  </tr>
  <%=form_for(@concerncargo,:url=>{:action=>"update"}) do |f| %>
    <%unless @concerncargo.userid.blank?%>
    <%@concerncargo.userid.each_index do |index|%>

      <tr>
        <td><%=@concerncargo.userid[index][0]%></td>        

       <td> <input type="checkbox" name="mail<%=index%>"  value="true" <%="checked" if @concerncargo.userid[index][1]==true%>></input></td>
        <td> <input type="checkbox" name="delete<%=index%>" value="true"></input></td>
   
    </tr>
  <%end%>
  <%end%>
  </table>
   <input type="hidden" name="concern_type" value="user"></input>
  <input type="hidden" name="concerncargoid" value=<%=@concerncargo.id.to_s%>></input>
  <%= f.submit("确定",:class=>"btn primary")%>
<% end %>

