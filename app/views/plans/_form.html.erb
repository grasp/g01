    <%= f.select(:deliver,options_for_select(@delivers,(@plan.deliver.nil? ? @delivers.first.first : @plan.deliver)),{},:class => "input-medium" )%>
    <%= f.select(:status,options_for_select([["open","open"],["close","close"]],(@plan.status.nil? ? "open" : @plan.status)),{},:class => "input-small" )%>
    <%= f.text_field :priority, :input_html => { :value => 100 },:class=>"input-small"  %>
  <span class="help_inline">输入一个数字，百类，千类，万类优先级设置（低中高)</span>
    
  </div>

