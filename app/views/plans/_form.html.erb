<%= form_for(@plan) do |f| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
        <% @plan.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%#= f.label :title %><br />
    
    <%= f.text_field :title ,:class => 'input-xxlarge'%>
   <span class="help_inline">请输入计划标题,尽量准确，画龙点睛的作用</span>
    <%#= f.label :user %><br />
  <%#= f.text_field :user %>   

