   <div class="input">   <%= f.select(:truck_id,options_for_select(@mytruck.to_a,@quote.truck_id) ) %></div> 
     </div>
  <div class="actions">
    

     <%= f.submit("马上报价",:class=>"btn primary") %>
   </div>

    <%= f.hidden_field :cargo_id %>






</fieldset>
<% end %>
<%else%>
