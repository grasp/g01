
<%if @mytruck.size>0 %>
<%= form_for(@quote,:as=>:quote,:html => {:class => "show_form"}) do |f| %>
<fieldset>
  <% if @quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% @quote.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :报价 %>
    <div class="input">  <%= f.text_field :price %>元</div> 
    </div>
